---
const { itemNumber, slug, itemName } = Astro.props;
---

<li class="flex flex-col items-end">
  <span
    class="text-xs text-transparent bg-clip-text bg-gradient-to-r from-lt-indigo-solid-color-button to-lt-grimsom-solid-color-button dark:from-dt-teal-solid-color-button dark:to-dt-amber-solid-color-button"
    >{itemNumber}.</span
  >
  <a href={slug}>
    {itemName}
  </a>
</li>
