---
const { class: className } = Astro.props;
---

<button
	aria-label="Toggle Dark Mode"
	class:list={[
		"dark-mode-button hover:shadow-outline rounded border border-lt-indigo-border p-1.5 text-lt-indigo-high-contrast-text hover:border-lt-indigo-border-focus hover:bg-lt-indigo-interactive-component/[.1] dark:border-dt-teal-border dark:text-dt-teal-high-contrast-text dark:hover:border-dt-teal-border-focus dark:hover:bg-dt-teal-interactive-component/[.1] sm:p-2",
		className,
	]}
>
	<svg
		xmlns="http://www.w3.org/2000/svg"
		viewBox="0 0 20 20"
		fill="currentColor"
		class="h-6 w-6"
	>
		<path
			class="sun hidden"
			fill-rule="evenodd"
			d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
			clip-rule="evenodd"></path>

		<path
			class="moon"
			d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
		></path>
	</svg>
</button>

<script lang="ts" is:inline>
	// Detect system preference change
	window
		.matchMedia("(prefers-color-scheme: dark)")
		.addEventListener("change", (event) => {
			setTheme(event.matches ? "dark" : "light");
		});

	// Set theme
	function setTheme(newTheme) {
		localStorage.setItem("theme", newTheme);
		document.documentElement.classList.remove("dark", "light");
		document.documentElement.classList.add(newTheme);
		document
			.querySelector('button[aria-label="Toggle Dark Mode"] .sun')
			.classList.toggle("hidden", newTheme !== "dark");
		document
			.querySelector('button[aria-label="Toggle Dark Mode"] .moon')
			.classList.toggle("hidden", newTheme !== "light");
	}

	// Toggle theme
	function toggleTheme() {
		const currentTheme = localStorage.getItem("theme");
		const newTheme = currentTheme === "dark" ? "light" : "dark";
		setTheme(newTheme);
		// Dispatch a custom event to signal that the theme has changed
		const themeChangeEvent = new Event("theme-changed");
		document.dispatchEvent(themeChangeEvent);
		console.log(newTheme);
	}

	// Detect system preference
	if (!localStorage.getItem("theme")) {
		let isDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
		setTheme(isDark ? "dark" : "light");
	}

	// Set initial theme
	setTheme(localStorage.getItem("theme"));

	// Add event listener
	document
		.querySelector('button[aria-label="Toggle Dark Mode"]')
		.addEventListener("click", toggleTheme);
	document.addEventListener("astro:after-swap", () => {
		setTheme(localStorage.getItem("theme"));
	});
</script>
